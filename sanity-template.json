{
  "version": 0,
  "title": "Portfolio with Gatsby",
  "description": "A web portfolio built in Gatsby.",
  "previewMedia": {
    "type": "image",
    "src": "assets/frontend.jpg",
    "alt": "A preview image of the portfolio website."
  },
  "technologies": [
    {
      "id": "gatsby",
      "name": "Gatsby",
      "url": "https://www.gatsbyjs.org/"
    },
    {
      "id": "netlify",
      "name": "Netlify",
      "url": "https://www.netlify.com/"
    }
  ],
  "deployments": [
    {
      "id": "studio",
      "type": "studio",
      "title": "Content Studio",
      "description": "The Content Studio is where you edit and structure your content.",
      "provider": {
        "name": "netlify",
        "config": {
          "base": "studio",
          "cmd": "npm run build && cp ./netlify.toml dist",
          "dir": "studio/dist"
        },
        "requirements": ["build-hook"]
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/studio.jpg",
        "alt": "A preview image of the Content Studio."
      }
    },
    {
      "id": "web",
      "type": "web",
      "title": "Portfolio Website",
      "description": "A blazing fast portfolio, made for being easy to customize and update.",
      "requiredTokens": [
        {
          "role": "deploy-studio",
          "label": "GraphQL API Deployer"
        }
      ],
      "provider": {
        "name": "netlify",
        "config": {
          "cmd": "npm run build-web",
          "dir": "web/public"
        },
        "requirements": ["build-hook"]
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/frontend.jpg",
        "alt": "A preview image of the portfolio website."
      }
    }
  ]
}
